<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Rolodex</title>
    @*TO-DO: Update Metadata*@
    @*<meta name="description"
    content="Portfolio of projects, skills, and full-stack C# software development blog posts by Cadence Eva.">*@

    @*Favicon*@
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">

    @*Bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous">

    @*Bootstrap Icons*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @*Devicons*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">

    @*Fonts*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500;600;700;800&family=Roboto:ital,wght@0,100;0,400;0,900;1,100;1,300;1,500;1,900&display=swap"
          rel="stylesheet">

    @*Custom Styling*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menupill.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customForms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rolodex.styles.css" asp-append-version="true" />
</head>
<body>

    <div id="menuPillContainer" class="navbar navbar-dark">
        <nav id="menuPill" class="navbar-nav text-light">
            <div id="home-btn" class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="Home" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-house-fill"></i>
                    </div>
                    <span class="menu-label">Home</span>
                </a>
            </div>
            <div id="contacts-btn" class="nav-item">
                <a asp-controller="Contacts" asp-action="Index" class="nav-link"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="Contacts" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <span class="menu-label">Contacts</span>
                </a>
            </div>
            <div id="categories-btn" class="nav-item">
                <a asp-controller="Categories" asp-action="Index" class="nav-link"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="Categories" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-tag-fill"></i>
                    </div>
                    <span class="menu-label">Categories</span>
                </a>
            </div>
            <div id="notes-btn" class="nav-item">
                <a asp-controller="Notes" asp-action="Index" class="nav-link"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="Notes" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <span class="menu-label">Notes</span>
                </a>
            </div>
            <div id="about-btn" class="nav-item">
                <a href="https://cadence-eva.netlify.app/" class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="About Me" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <span class="menu-label">About Me</span>
                </a>
            </div>
            <div id="settings-btn" class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   data-bs-title="Settings" data-bs-custom-class="nav-tooltip">
                    <div class="icon-container">
                        <i class="bi bi-gear-fill"></i>
                    </div>
                    <span class="menu-label">Settings</span>
                </a>
            </div>
        </nav>
    </div>

    <main role="main" class="main-container">
        @RenderBody()
    </main>

    <footer class="footer container-fluid text-accent py-3">
        <div class="container">
            <div class="row row-cols-1 row-cols-lg-3 text-center align-items-center gy-2">
                <div class="col text-lg-start">
                    &copy2023 Cadence Eva Custin
                </div>
                <div class="col">
                    <img src="/img/Cadence-Eva-logo-transparent.png" width="300" alt="Cadence Eva Logo">
                </div>
                <div class="col text-lg-end">
                    <a class="text-decoration-none" href="https://www.linkedin.com/in/cadence-eva-custin/">
                        <i class="bi bi-linkedin social-icons text-accent"></i>
                    </a>
                    <a class="text-decoration-none" href="https://github.com/eva-grimm">
                        <i class="bi bi-github social-icons"></i>
                    </a>
                    <a class="text-decoration-none" href="mailto:eva.custin@gmail.com">
                        <i class="bi bi-envelope-at social-icons"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @*Bootstrap*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    @*Sweet Alerts*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
</body>
</html>